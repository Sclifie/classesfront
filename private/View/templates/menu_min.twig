{% include('header.twig') %}
<nav class="top-bar animate-dropdown">
    <div class="container">
        <div class="col-xs-12 col-sm-6 no-margin">
            <ul id="navigation">
                {% for item in navigation %}
                <li><a href="{{ item.href }}">{{ item.title }}</a></li>
                {% endfor %}
            </ul>
        </div><!-- /.col -->

        <div class="col-xs-12 col-sm-6 no-margin">
            <ul class="right">
                <li class="dropdown" id="languge_dropdown">
                    <a class="dropdown-toggle"  data-toggle="dropdown" href="#change-language">Русский</a>
                    <ul class="dropdown-menu" role="menu" >
                        {% for language in languages %}
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">{{ language.title }}</a></li>
                        {% endfor %}
                    </ul>
                </li>
                <!-- TODO: ЧЕК СЕССИИ -->
                {% if auth.status == true %}
                <li><a href="auth">Ваш Аккаунт {{ auth.name }}</a></li>
                {% else %}
                <li><a href="auth">Регистрация</a></li>
                <li><a href="auth">Логин</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
